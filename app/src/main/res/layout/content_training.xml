<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/training"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cardview_height"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:id="@+id/training_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/training_image"
            android:padding="@dimen/image_padding"
            android:layout_width="@dimen/image_radius"
            android:layout_height="@dimen/image_radius"
            android:src="@drawable/ic_chart_line"/>

        <TextView
            android:id="@+id/training_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:gravity="top"
            android:paddingBottom="@dimen/text_padding_top_bottom"
            android:paddingTop="@dimen/text_padding_top_bottom"
            android:paddingStart="@dimen/text_padding_left"
            android:paddingEnd="@dimen/text_padding_right"
            android:textSize="@dimen/title_text_size" />

        <TextView
            android:id="@+id/training_day"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/text_padding_left"
            android:paddingEnd="@dimen/text_padding_right"
            android:paddingBottom="@dimen/text_padding_top_bottom"
            android:paddingTop="@dimen/text_padding_top_bottom"
            android:gravity="bottom"
            android:textSize="@dimen/subtitle_text_size" />
    </RelativeLayout>
</android.support.v7.widget.CardView>